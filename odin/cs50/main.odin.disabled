package cs50

import "core:fmt"     // .print, .println, .printf

main :: proc() {
    defer clear_allocations()
    name := get_string("What's your name? ")
    food := get_string("Hi %s! What's your favorite food? ", name)
    print_string("name", name)
    print_string("food", food)
}

// See here: https://odin-lang.org/docs/overview/#exported-names
@(private="file") 
print_string :: proc(ident: string, value: string) {
    fmt.printf("%s := \"%s\" (len = %i)\n", ident, value, len(value))
}
